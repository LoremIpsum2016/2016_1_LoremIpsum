<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="b-header">
        <h1>EpicArkanoid</h1>
    </div>
    <div class ="container">
        <fest:if test="json.isAuth">
            <a class ="no-text-decoration" href="#scoreboard">
                <div class="b-main__text-block b-main__text-block_position js-scoreboard">
                    Score board
                </div>
            </a>
            <a href="#game">
                <div  class="b-main__text-block b-main__text-block_position js-start-game">
                    Start Game.
                </div>
            </a>
            <a href="#logout">
                <div class="b-main__text-block b-main__text-block_position js-logout">
                    Logout
                </div>
            </a>
        </fest:if>
        <fest:if test="!json.isAuth">
            <a href="#scoreboard">
                <div class="b-main__text-block b-main__text-block_position js-scoreboard">
                    Score board
                </div>
            </a>
            <a href="#login">
                <div class="b-main__text-block b-main__text-block_position js-login">
                    Login
                </div>
            </a>
            <a href="#registration">
                <div class="b-main__text-block b-main__text-block_position js-registration">
                    Registration
                </div>
            </a>
        </fest:if>
    </div>
</fest:template>
