<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <fest:each iterate="json" index="i">
        <fest:value>i</fest:value>=<fest:value>json[i]</fest:value><!-- foo=bar -->
    </fest:each>
    <div id="main">

        <div class="header">
            <h1>EpicArkanoid</h1>
        </div>
        <div id ="main__container">
            <a href="#scoreboard">
            <div class="main__container__elem js-scoreboard">
                Score board
            </div>
            </a>
            <a href="#game">
            <div  class="main__container__elem js-start-game">
                Start Game.
            </div>
            </a>
            <a href="#login">
            <div class="main__container__elem js-login">
                Login
            </div>
            </a>
        </div>
    </div>

</fest:template>
