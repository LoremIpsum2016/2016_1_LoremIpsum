<fest:template xmlns:fest="http://fest.mail.ru">
    <fest:include  src="./back_button.xml"/>
    <div class="header">
        <h2>SignUp</h2>
    </div>
    <form class="b-registration__form" name="register" action="/api/v1/auth/signin" method="POST">
        <input class="b-registration-form-input-field b-registration-form-input-field_position" name="email" type="text" size="25"
               maxlength="30" value="" placeholder="Email" />
        <input class="b-registration-form-input-field b-registration-form-input-field_position" name="nickname" type="text" size="25"
               maxlength="30" value="" placeholder="Nickname" />
        <input class="b-registration-form-input-field b-registration-form-input-field_position"  name="password" type="password"
               size="25" maxlength="30" value="" placeholder="Password" />
        <input class="b-registration-form-input-field b-registration-form-input-field_position"  name="password2" type="password"
               size="25" maxlength="30" value="" placeholder="Repeat password" />
        <input class="b-submit b-submit_margin form-submit" type="submit" name="enter" value="Sign up" />
        <div id="form__error-block">
        </div>
    </form>
</fest:template>
